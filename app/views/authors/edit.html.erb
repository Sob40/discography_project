<div class="container mt-4">
  <h1 class="mb-4">Edit Author</h1>

  <%= form_with(model: @author, local: true, class: "needs-validation", novalidate: true) do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Author Name *", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
    
    <div class="d-flex justify-content-between">
      <%= link_to "Back", authors_path, class: "btn btn-secondary" %>
      <%= f.submit "Update Author", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>