<div class="container mt-4">
  <h1 class="mb-4">Authors</h1>
  <div class="mb-3">
    <%= link_to 'New Author', new_author_path, class: 'btn btn-success' %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td><%= author.name %></td>
          <td>
            <%= link_to 'Edit', edit_author_path(author), class: 'btn btn-warning btn-sm' %>
            <%= button_to 'Delete', author_path(author), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm', form: { class: 'd-inline' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
