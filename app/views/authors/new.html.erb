<div class="container mt-4">
  <h1 class="mb-4">New Author</h1>

  <%= form_with(model: @author, data: { turbo_frame: "_top" }) do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Author Name *", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
    
    <div>
      <%= f.submit "Create Author", class: "btn btn-primary" %>
      <%= link_to "Back", authors_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>