<div class="container mt-4">
  <h1 class="mb-4"><%= @artist.name %></h1>
  <p><%= @artist.description %></p>
  <p><strong>Total LPs:</strong> <%= @artist.lp_count %></p>

  <% if @lps.present? %>
    <h3>LPs</h3>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% @lps.each do |lp| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= lp.name %></h5>
              <p class="card-text"><%= truncate(lp.description, length: 100) %></p>
            </div>
            <div class="card-footer text-end">
              <%= link_to 'View LP', lp_path(lp), class: 'btn btn-secondary btn-sm' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info mt-4" role="alert">
      No LPs found for this artist.
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to 'Edit Artist', edit_artist_path(@artist), class: 'btn btn-warning' %>
    <%= link_to 'Back to Artists', artists_path, class: 'btn btn-secondary' %>
    <%= link_to 'Delete Artist', @artist, 
      data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, 
      class: 'btn btn-danger' %>
  </div>
</div>
